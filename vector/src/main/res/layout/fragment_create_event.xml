<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    tools:context=".features.home.notice.CreateEventFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_select_event_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_event_type"
            android:textAppearance="@style/TextAppearance.Vector.Login.Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/rg_event_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv_select_event_type">

            <RadioButton
                android:id="@+id/rbOnlineEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/online_event"
                android:textColor="?riotx_text_primary" />

            <RadioButton
                android:id="@+id/rbLiveEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/live_event"
                android:textColor="?riotx_text_primary" />
        </RadioGroup>

        <EditText
            android:id="@+id/et_start_date_and_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:autofillHints="@null"
            android:background="@drawable/item_optional_digit_border"
            android:focusable="false"
            android:hint="@string/select_start_date_and_time"
            android:inputType="datetime"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/rg_event_type" />

        <EditText
            android:id="@+id/et_end_date_and_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:autofillHints="@null"
            android:background="@drawable/item_optional_digit_border"
            android:focusable="false"
            android:hint="@string/select_end_date_and_time"
            android:inputType="datetime"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/et_start_date_and_time" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tl_event_link"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:hintEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_end_date_and_time">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_event_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_link"
                android:imeOptions="actionNext"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tl_venue"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:hintEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tl_event_link">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_venue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_venue"
                android:imeOptions="actionNext"
                android:inputType="textMultiLine" />
        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/et_time_zone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:autofillHints="@null"
            android:background="@drawable/item_optional_digit_border"
            android:focusable="false"
            android:hint="@string/select_timezone"
            android:inputType="datetime"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/tl_venue" />

        <Button
            android:id="@+id/btn_create_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/create_event"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/et_time_zone" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>