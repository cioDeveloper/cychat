<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".features.home.notice.CreateNoticeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_select_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_notice_board"
            android:textAppearance="@style/TextAppearance.Vector.Login.Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="@null"
            android:background="@drawable/item_optional_digit_border"
            android:completionHintView="@string/select_notice_board"
            android:completionThreshold="1"
            android:focusable="false"
            android:hint="@string/select_notice_board"
            android:inputType="text"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_select_user"
            tools:listitem="@layout/item_spinner_country" />

        <EditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:autofillHints="@null"
            android:background="@drawable/item_optional_digit_border"
            android:gravity="start"
            android:hint="@string/enter_title"
            android:inputType="textMultiLine"
            android:lines="1"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/spinner" />

        <EditText
            android:id="@+id/et_text_before"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:autofillHints="@null"
            android:background="@drawable/item_optional_digit_border"
            android:gravity="start"
            android:hint="@string/enter_notice"
            android:inputType="textMultiLine"
            android:lines="6"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/et_title" />

        <TextView
            android:id="@+id/tv_attach_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawablePadding="4dp"
            android:gravity="center|start"
            android:text="@string/attach_a_photo_video"
            app:drawableStartCompat="@drawable/ic_attachment"
            app:layout_constraintTop_toBottomOf="@id/et_text_before" />

        <EditText
            android:id="@+id/et_text_after"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:autofillHints="@null"
            android:background="@drawable/item_optional_digit_border"
            android:gravity="start"
            android:hint="@string/enter_text_bottom_post"
            android:inputType="textMultiLine"
            android:lines="6"
            android:padding="8dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tv_attach_photo" />

        <ImageView
            android:id="@+id/iv_preview"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/border_notice_image"
            android:contentDescription="@null"
            android:padding="8dp"
            android:visibility="gone"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_attach_photo" />

        <ImageView
            android:id="@+id/iv_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/white"
            android:contentDescription="@null"
            android:src="@drawable/ic_check_off"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/iv_preview"
            app:layout_constraintTop_toTopOf="@id/iv_preview"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/tv_attach_document"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawablePadding="4dp"
            android:gravity="center|start"
            android:padding="8dp"
            android:text="@string/attach_document"
            app:drawableStartCompat="@drawable/ic_paperclip"
            app:drawableTint="?android:textColorSecondary"
            app:layout_constraintTop_toBottomOf="@id/iv_preview" />

        <TextView
            android:id="@+id/tv_preview_attachment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_attachments"
            android:drawablePadding="4dp"
            android:ellipsize="end"
            android:gravity="center|start"
            android:lines="1"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingEnd="32dp"
            android:paddingBottom="8dp"
            android:textColor="@color/black"
            android:visibility="gone"
            app:drawableStartCompat="@drawable/ic_paperclip"
            app:layout_constraintTop_toBottomOf="@id/tv_attach_document"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/iv_remove_attachment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_check_off"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/tv_preview_attachment"
            app:layout_constraintEnd_toEndOf="@id/tv_preview_attachment"
            app:layout_constraintTop_toTopOf="@id/tv_preview_attachment"
            app:tint="@color/black"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_attach_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawablePadding="4dp"
            android:gravity="center|start"
            android:padding="8dp"
            android:text="@string/create_event"
            app:drawableStartCompat="@drawable/quantum_ic_grade_white_24"
            app:drawableTint="?colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/tv_preview_attachment" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_optional_digit_border"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tv_attach_event"
            tools:visibility="visible">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="title" />

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_type"
                tools:text="title" />


            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_start_time"
                tools:text="title" />


            <TextView
                android:id="@+id/tv_venue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_end_time"
                tools:text="title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <EditText
            android:id="@+id/et_end_date_and_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:autofillHints="@null"
            android:background="@drawable/item_optional_digit_border"
            android:focusable="false"
            android:hint="@string/select_end_date_and_time"
            android:inputType="datetime"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/cl_event" />

        <Button
            android:id="@+id/btn_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/create_notice"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/et_end_date_and_time" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>